<div style="display: flex;justify-content: center;align-items: center;flex-direction:row;height:calc(100vh - 210px);">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4 form">

        <h2 class="title-login">Log in</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, placeholder: "cowabunga@gmail.com" %>
                <%= f.input :password, required: false, placeholder: "••••••" %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "button-login" %>
              </div>
              <%= render "devise/shared/links" %>
            <% end %>

      </div>
    </div>
  </div>
  
</div> 