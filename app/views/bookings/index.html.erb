<div class="bookings-container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @surf_company %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Booking</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Surf Company ID</th>
            <th>Date</th>
            <th>time</th>
          </thead>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.surf_company_id %></td>
              <td><%= booking.date %></td>
              <td><%= booking.time %></td>
              <td>
                <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
                <%= link_to edit_booking_path(booking), data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Back to home", root_path %>
    </div>
  </div>
</div>



