  <div class="container">
    <div class="header">
      <h1>Manage my bookings</h1>
      <%= link_to surf_companies_path do %>
        <button class="btn text-white">Create new booking</button>
      <% end %>
    </div>
    <div class="bookings-container">
      <% @bookings.each do |booking| %>
        <%= link_to booking_path(booking), class:'card-link' do %>
          <div class="booking-product">
            <img style="background-image: url('https://source.unsplash.com/featured/?{surf},{surfer}<%= (1..10000).to_a.sample %>');">
            <div class="booking-attributes">
              <div class="booking-product-infos">
                <h2>Booking Id: <%=booking.id %> </h2>
                <p>Your booking is with: <%= booking.surf_company_id %></p>
                <p>Lesson date: <%= booking.date %></p>
                <p>Lesson time: <%= booking.time %></p>
              </div>
              <div class="booking-attribute-links">
                <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
                <%= link_to edit_booking_path(booking), data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>


      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Surf Company ID</th>
            <th>Date</th>
            <th>time</th>
          </thead>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.surf_company_id %></td>
              <td><%= booking.date %></td>
              <td><%= booking.time %></td>
              <td>
                <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
                <%= link_to edit_booking_path(booking), data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Back to home", root_path %>
    </div>
  </div>
</div>



